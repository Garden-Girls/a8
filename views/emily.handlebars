  <div class='journal'>
    
    <div class="top">
    <img id='journalPhoto' src="images/emily.svg">
      <h2>emily</h2>
      <p id='top'>
      Add Journal Entry<br>
      <label for="start"></label>
      <input type="date" id="start" name="start"
       value="2021-02-24"
       min="2015-01-01" max="2021-12-31">

    </p></div>
    
    <div class="bottom">
      <p id='how-is-it'>How is your plant today?</p>
        <button onClick="bad()" id='bad-face'>
          <img src="images/bad-face.svg">
        </button>
        <button onClick="normal()" id='normal-face'>
          <img src="images/normal-face.svg"></button>

          <button onClick='good()' id='good-face'>
          <img src="images/good-face.svg"></button>
    
      <p id='comments'>Comments</p>
      <img id= "comments-rectangle" src="images/comments-rectangle.svg">

      <form>
        <input type="text" id="fname" name="fname" >
        </form>
       <button onClick="Okay()" type="button" id="Okay">Okay</button>

      <p id='watering-reminder'>Watering Reminder</p>
      <img id="reminder-rectangle" src="images/reminder-rectangle.svg">
      

      <form id="pick-time" action="/action_page.php">
        <label for="reminder-time" class='comments'></label>
        <select name="time" id="time">
          <optgroup label="Morning">
            <option value="12-6">12am-6am</option>
            <option value="6-12">6am-12pm</option>
          </optgroup>

        <optgroup label="Afternoon">
              <option value="12-3">12pm-3pm</option>
              <option value="3-6">3pm-6pm</option>
            </optgroup>

        <optgroup label="Night">
              <option value="6-9">6pm-9pm</option>
              <option value="9-12">9pm-12pm</option>
            </optgroup>
        </select>
      </form>
      <img id='bell' src="images/bell.svg">
