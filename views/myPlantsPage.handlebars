<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name='viewport' content="width=device-width, initial-scale=1.0">
 <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
 <script src='js/bootstrap.js'></script>
 <script src= 'js/jquery-1.11.0.js'></script>
  <link rel="stylesheet" href="css/myPlantsStyle.css">

  

</head>
<body>


  <div class="container">
    <div class="header">
        <img src="images/leaf.svg" />
        <h1>My Plants</h1>
        <img src="images/leaf.svg" />
    </div>

    <!--<div class="back-button">
      <a id='back-button' href='/index'>
        <img src='images/back-button.svg'>
      </a>
    </div>-->

    <div class="plantsList">
      {{#Plants}}
          <div class="a-plant">

              <a href="/plant/{{nickname}}" class="fill-div">

                <div class="plantINFO">
                  <h2>{{nickname}}</h2>
                  <p>Species: {{species}}</p>
                  <p>Age: {{autoAge}} days</p>
                  <p id="watering">Watering: {{watering}}</p>
                </div>

              <div class="plantIMG">
                <img src="/images/{{img}}" alt="Image not found" onerror="this.onerror=null;this.src='/images/{{species}}.svg'"/>
              </div>


              </a>

          </div>
      {{/Plants}}
      <div class="padHead"></div>
    </div>


      <div class="footer">
        <div class="footer-item">
          <a id='home-button' href='/index'>
              <img src="images/home-button.svg">
          </a>
        </div>

        <div class="footer-item">
          <a href="/calendar">
          <img id='calendar-button' src="images/calendar-button.svg">
          </a>
        </div>
      </div>


  </div>


<script src="js/bootstrap.min.js"></script>
</body>
</html>